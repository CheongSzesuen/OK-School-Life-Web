{
  "$schema": "https://openapi.vercel.com/vercel.json",
  "version": 2,
  "regions": ["hkg1", "icn1", "sin1"],
  "routes": [
    {
      "src": "/_next/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(jpg|png|webp|avif|woff2|css|js))",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/api/(.*)",
      "headers": {
        "cache-control": "no-store"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "x-edge-region", "value": "hkg1" },
        { "key": "x-cdn-fallback", "value": "icn1" }
      ]
    }
  ]
}